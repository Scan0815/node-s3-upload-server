{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es2020"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src/",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
